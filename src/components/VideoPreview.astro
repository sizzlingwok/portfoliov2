---
const { videoSrc, comboclass } = Astro.props;
import { SplitWord } from "../components/js/Animations.jsx";
---

<SplitWord client:only="react" />
<div class={`preview-container ${comboclass}`}>
  <div class="content-details">
    <p class="text-description splitword">
      <slot name="description" />
    </p>
  </div>
  <div class="content-container">
    <video
      width="100%"
      height="100%"
      autoplay
      loop
      muted
      playsinline
      style={{ borderRadius: "1rem" }}
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
  </div>

  <style>
    .preview-container {
      gap: 5rem;
      display: flex;
      margin: 0 auto;
      width: auto;
      align-items: center;
    }

    .preview-container.reverse {
      flex-direction: row-reverse;
    }

    .content-container {
      width: 60%;
      box-shadow: 0 1rem 1.5rem rgba(0, 0, 0, 0.25);
    }

    .content-details {
      display: flex;
      flex-direction: row;
      gap: 5rem;
      width: auto;
      flex: 1;
    }

    .text-description {
      color: #86868b;
      font-weight: 530;
      font-size: 1.75rem;
      flex: 1;
      user-select: none;
    }
  </style>
</div>
