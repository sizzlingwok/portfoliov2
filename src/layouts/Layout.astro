---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
const { title, description } = Astro.props;
import { Lenis } from "../components/js/lenis.jsx";
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ViewTransitions />
  </head>

  <body>
    <main>
      <div class="landing">
        <div class="title">under construction</div>
        <a href="/intro" class="button">click here</a>
      </div>
    </main>
    <style>
      a {
        color: white;
      }
      .landing {
        display: flex;
        flex-direction: column;
        gap: 1rem;
        margin: 0 auto;
        text-align: center;
        height: 100vh;
        justify-content: center;
      }

      .video-container {
        width: 500px;
        height: auto;
        margin: 0 auto;
      }

      .title {
        font-size: 10rem;
        color: #f5f5f7;
        font-weight: 530;
        user-select: none;
      }

      .description {
        font-size: 1.5rem;
        color: #f5f5f7;
        user-select: none;
      }
    </style>
  </body>
</html>
