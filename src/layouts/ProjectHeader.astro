---
import "../styles/global.css";
const {
  videoSrc,
  tag,
  title,
  description1,
  description2,
  role,
  tools,
  timeline,
  prototypeLink,
} = Astro.props;
---

<div class="project-header">
  <div class="project-header-wrapper">
    <div class="fs-bg">
      <video width="100%" height="100%" autoplay loop muted playsinline>
        <source src={videoSrc} type="video/mp4" />
      </video>
    </div>
    <div class="project-header-container">
      <div class="home-project-title">
        <div class="tag">{tag}</div>
        <h1 class="splitletter">{title}</h1>
      </div>
      <ul class="project-header-details">
        <div class="project-description-wrapper">
          <p class="project-description splitwordheader">
            {description1}
          </p>
          <p class="project-description splitwordheader long">
            {description2}
          </p>
        </div>
        <ul class="list-container">
          <p class="project-description splitwordheader long">
            <span class="medium">Role</span> - {role}
          </p>
          <p class="project-description splitwordheader long">
            <span class="medium">Tools</span> - {tools}
          </p>
          <p class="project-description splitwordheader long">
            <span class="medium">Timeline</span> - {timeline}
          </p>
        </ul>
        <div class="project-buttons slideup">
          <button class="project-button"> View Case Study </button>
          <button class="project-button">
            <a href={prototypeLink} target="_blank" rel="noopener noreferrer">
              View Prototype â†—
            </a>
          </button>
        </div>
      </ul>
    </div>
  </div>
</div>

<style>
  .project-header-container {
    gap: 2rem;
    display: flex;
    flex-direction: column;
    user-select: none;
    width: auto;
  }

  .project-header-wrapper {
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    max-width: 90rem;
    margin: 0 auto;
  }

  h1 {
    font-size: 2.25rem;
    color: #f5f5f7;
    text-decoration: none;
    user-select: none;
    font-weight: 530;
  }

  .tag {
    font-size: 0.875rem;
    letter-spacing: 3px;
    color: #f5f5f780;
    font-weight: 400;
  }

  .fs-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
    z-index: -1;
    background-color: black;
  }

  .fs-bg video {
    min-width: 100%;
    min-height: 100%;
    width: auto;
    height: auto;
    object-fit: cover;
    filter: blur(3rem) brightness(50%);
  }

  .project-header-container {
    gap: 2rem;
    display: flex;
    flex-direction: column;
    user-select: none;
    width: auto;
  }

  .home-project-title {
    font-size: 2rem;
    color: #f5f5f7;
    text-decoration: none;
    gap: 0.5rem;
    display: flex;
    flex-direction: column;
  }

  .project-header-details {
    gap: 2rem;
    display: flex;
    flex-direction: column;
    width: auto;
  }

  .project-description-wrapper {
    flex-direction: row;
    font-size: 1rem;
    color: #f5f5f7;
    width: auto;
    display: flex;
    gap: 5rem;
    line-height: 1.6;
    font-weight: 450;
  }

  .project-description {
    max-width: 30rem;
  }

  ul {
    display: flex;
    flex-direction: column;
    font-size: 1rem;
    color: #ddddde;
    text-decoration: none;
    gap: 1rem;
    width: auto;
    font-weight: 450;
  }

  .medium {
    font-weight: 700;
  }

  .project-button {
    background-color: #ffffff15;
    border: none;
    color: #f5f5f7;
    padding: 1rem 1.5rem;
    text-align: center;
    text-decoration: none;
    font-size: 1rem;
    cursor: pointer;
    font-weight: 530;
    transition: background-color 0.3s;
    box-shadow: 0 1rem 1.5rem rgba(0, 0, 0, 0.25);
    text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);
    backdrop-filter: blur(1rem);
    border-radius: 1.5rem;

    background-color: #86868b10;
    transition: background-color 0.3s ease;

    border: 1px solid #f5f5f715;
    transition: border-color 0.3s ease;
  }

  .project-buttons {
    display: flex;
    gap: 1rem;
  }

  .project-button a {
    color: inherit;
    text-decoration: none;
  }

  /* animations */
  .project-button:hover {
    border: 1px solid #f5f5f735;
    background-color: #86868b25;
  }
</style>
