---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { ViewTransitions } from "astro:transitions";
const { title, description } = Astro.props;
import {
  Landingtext,
  SlideUp,
  ProjectSlideUp,
  WorkSlideUp,
  ExpandDivider,
  SplitWordHeader,
  SplitWord,
  SplitLetter,
} from "../components/js/Animations.jsx";
---

<!doctype html>
<html lang="en" transition:animate="none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/webp" href="/favicon.webp" />
    <title>{title}</title>
    <meta name="description" content={description} />
    <ViewTransitions />
  </head>
  <body>
    <Landingtext client:only="react" />
    <SlideUp client:only="react" />
    <ProjectSlideUp client:only="react" />
    <WorkSlideUp client:only="react" />
    <ExpandDivider client:only="react" />
    <SplitWordHeader client:only="react" />
    <SplitWord client:only="react" />
    <SplitLetter client:only="react" />
    <Header />
    <slot />
    <Footer />
  </body>
</html>
