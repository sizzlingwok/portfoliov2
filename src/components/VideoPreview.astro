---
const { videoSrc, title, description } = Astro.props;
---

<div class="preview-container">
  <div class="content-container">
    <video
      width="100%"
      height="100%"
      autoplay
      loop
      muted
      playsinline
      style={{ borderRadius: "1rem" }}
    >
      <source src={videoSrc} type="video/mp4" />
    </video>
  </div>
  <div class="content-details">
    <div class="title-small">{title}</div>
    <p class="text-description">{description}</p>
  </div>
</div>

<style>
  .preview-container {
    gap: 2rem;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    width: auto;
  }

  .content-details {
    display: flex;
    flex-direction: row;
    gap: 5rem;
  }

  .title-small {
    font-size: 1.5rem;
    color: #f5f5f7;
    text-decoration: none;
    user-select: none;
    flex: 1;
    font-weight: 530;
  }

  .text-description {
    color: #86868b;
    font-weight: 430;
    font-size: 1rem;
    flex: 1;
    line-height: 1.6;
  }
</style>
