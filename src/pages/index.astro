---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Andy Duong"
  description="Hello! I'm Andy Duong — Product Designer based in the Bay Area. I craft meaningful narratives fueled by my passion for music and art."
  canonical="https://andyduong.work"
>
  <main>
    <section class="home">
      <div class="heading-wrapper">
        <h1 class="hoverword">
          <span class="italic">hello!</span>
          I'm Andy Duong<br /> Product Designer in the Bay Area<br />
        </h1>
        <div class="heading-description">
          Scroll down to discover<span class="arrow">↓</span>
        </div>
      </div>
    </section>
    <section class="project-section">
      <ul class="project-wrapper">
        <li class="project">
          <a href="/spotify-party">
            <div class="project-content">
              <div class="project-bg spotify-party"></div>
              <div class="project-details">
                <p class="project-title">Spotify Party</p>
                <div class="project-description">
                  Enhancing the group listening experience for an immersive
                  music exploration
                </div>
              </div>
            </div>
          </a>
        </li>
        <li class="project">
          <a href="/spotify-party">
            <div class="project-content">
              <div class="project-bg"></div>
              <div class="project-details">
                <p class="project-title">sorette</p>
                <div class="project-description">
                  Enhancing the group listening experience for an immersive
                  music exploration
                </div>
              </div>
            </div>
          </a>
        </li>
        <li class="project">
          <a href="/spotify-party">
            <div class="project-content">
              <div class="project-bg"></div>
              <div class="project-details">
                <p class="project-title">mechmarket</p>
                <div class="project-description">
                  Enhancing the group listening experience for an immersive
                  music exploration
                </div>
              </div>
            </div>
          </a>
        </li>
        <li class="project">
          <a href="/spotify-party">
            <div class="project-content">
              <div class="project-bg"></div>
              <div class="project-details">
                <p class="project-title">mechmarket</p>
                <div class="project-description">
                  Enhancing the group listening experience for an immersive
                  music exploration
                </div>
              </div>
            </div>
          </a>
        </li>
      </ul>
    </section>
  </main>
</Layout>
<style>
  :root {
    --conditional-footer: rgb(0, 0, 0);
  }

  .home {
    display: flex;
    flex-direction: column;
    max-width: 960px;
    margin: 0 auto;
  }

  .heading-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    padding: 300px 0 200px 0;
  }

  h1 {
    font-size: 64px;
    line-height: 1.1;
    color: var(--highlight-text);
    font-weight: 500;
    text-decoration: none;
    user-select: none;
    text-align: center;
  }

  .heading-description {
    display: flex;
    color: var(--description-text);
    user-select: none;
    line-height: 29px;
    font-weight: 600;
    font-size: 21px;
    font-weight: 600;
    text-align: center;
    margin: 0 auto;
  }

  .project-description {
    color: var(--highlight-text);
    user-select: none;
    line-height: 25px;
    font-weight: 400;
    font-size: 19px;
    text-align: center;
  }

  .project-section {
    padding: 100px 0;
    margin: 0 auto;
  }

  .project-wrapper {
    max-width: 2560px;
    display: flex;
    gap: 20px;
    flex-wrap: wrap;
    width: 100%;
    list-style-type: none;
    margin: 0 auto;
    padding: 0 25px;
  }

  .project {
    box-sizing: border-box;
    flex-wrap: wrap;

    width: calc(50% - 10px);

    backdrop-filter: blur(1rem);
    -webkit-backdrop-filter: blur(1rem);
    border: 1px solid #f5f5f715;
    background-color: #86868b10;

    transition: border-color 0.3s ease;
  }

  .project:hover {
    border: 1px solid #f5f5f725;
  }

  .arrow {
    animation: arrow 3s infinite;
    padding: 0 0.5rem;
    color: var(--highlight-text);
  }

  @keyframes arrow {
    0% {
      transform: translateY(-5px);
      animation-timing-function: cubic-bezier(0.2, 0.8, 0.2, 1);
    }
    40% {
      transform: translateY(5px);
      animation-timing-function: cubic-bezier(0.8, 0, 0.5, 1);
    }
    100% {
      transform: translateY(-5px);
      animation-timing-function: cubic-bezier(0.6, 0, 0.4, 1);
    }
  }

  .project-content {
    display: flex;
    flex-direction: column;
    width: 100%;
    gap: 16px;
  }

  .project-details {
    position: absolute;
    display: flex;
    flex-direction: column;
    gap: 1rem;
    justify-content: center;
    z-index: 1;
    width: 100%;
    padding: 36px;
    width: 50%;
    left: 50%;
    transform: translateX(-50%);
  }

  .project-bg {
    width: 100%;
    height: 500px;
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
    overflow: hidden;
    filter: brightness(75%);
  }

  .project-title {
    position: relative;
    color: var(--highlight-text);
    user-select: none;
    line-height: 1.1;
    font-weight: 600;
    font-size: 36px;
    font-weight: 600;
    text-align: center;
  }

  .text-description {
    color: var(--description-text);
    user-select: none;
    line-height: 29px;
    font-weight: 600;
    font-size: 21px;
    flex: 1;
    font-weight: 600;
    display: inline;
  }

  .highlight {
    color: var(--highlight-text);
  }

  .project-bg.spotify-party {
    background-image: url("images/spotify/spotifythumbnail.webp");
  }

  .sorette {
    background-image: url("images/home/sorette-thumbnail.webp");
  }

  .mechmarket {
    background-image: url("images/home/mechmarket-thumbnail.webp");
  }
</style>
